<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.suqi.center.machine.dao.viz.mapper.VizMcTaskMapper">


    <select id="quickPageById" resultType="com.suqi.center.machine.dao.viz.entity.VizMcTaskEo">
        SELECT <choose><when test="ew!=null and ew.sqlSelect!=null and ew.sqlSelect !='' ">${ew.sqlSelect}</when><otherwise>*</otherwise></choose> FROM viz_mc_task
                    <where>
                        <if test="ew != null">
                            ${ew.sqlSegment}
                        </if>
                        and id &gt; #{lastId}
                    </where>
                        ORDER BY id DESC LIMIT #{pageSize}
    </select>

    <select id="quickPage" resultType="com.suqi.center.machine.dao.viz.entity.VizMcTaskEo">
        SELECT <choose><when test="ew!=null and ew.sqlSelect!=null and ew.sqlSelect !='' ">${ew.sqlSelect}</when><otherwise>*</otherwise></choose> FROM viz_mc_task
                    <where>
                        <if test="ew != null">
                            ${ew.sqlSegment}
                        </if>
                        <if test="pageNo &gt; 1">
                        and id &lt; (
                            SELECT id FROM viz_mc_task
                                        <where>
                                        <if test="ew != null">
                                            ${ew.sqlSegment}
                                        </if>
                                        </where>
                                        ORDER BY id DESC LIMIT ${((pageNo-1)*pageSize)-1}, 1)
                        </if>
                    </where>
                        ORDER BY id DESC LIMIT #{pageSize}
    </select>
</mapper>